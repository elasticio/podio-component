{
    "title": "Podio [BETA]",
    "desctiprion": "Connectivity to the Podio",
    "credentials": {
        "fields":{
            "oauth":{
                "label": "Authentication",
                "viewClass": "OAuthFieldView",
                "required": true
            }
        },
        "oauth2":{
            "client_id": "{{PODIO_APP_ID}}",
            "client_secret": "{{PODIO_APP_SECRET}}",
            "auth_uri": "https://podio.com/oauth/authorize",
            "token_uri": "https://podio.com/oauth/token"
        }
    },
    "triggers": {
        "getContacts": {
            "main": "./lib/triggers/getContacts.js",
            "title": "All Contacts",
            "description": "Fetches all available contacts, no deduplication or change detection",
            "type" : "polling"
        }
    }
}
